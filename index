  <body>
    <div class="sheet" role="application" aria-label="AMC 10 Answer Sheet">
      <header>
        <div>
          <h1>AMC 10 — Answer Sheet</h1>
          <div class="meta">
            <input
              id="studentName"
              placeholder="Name"
              aria-label="Student name"
            />
            <input id="school" placeholder="School / Team (optional)" />
            <input id="contestDate" type="date" />
          </div>
        </div>
        <div class="controls">
          <button id="downloadBtn">Download</button>
          <button id="printBtn" class="ghost">Print</button>
        </div>
      </header>

      <main class="grid">
        <section class="block" aria-label="Questions 1 to 13">
          <h3 style="margin: 0 0 8px 0">Questions 1–13</h3>
          <table>
            <tbody id="leftCol"></tbody>
          </table>
        </section>

        <section class="block" aria-label="Questions 14 to 25">
          <h3 style="margin: 0 0 8px 0">Questions 14–25</h3>
          <table>
            <tbody id="rightCol"></tbody>
          </table>
        </section>
      </main>

      <div class="footer">
        <div style="font-size: 13px; color: var(--muted)">
          Click a bubble to set your answer. Once chosen, it cannot be removed.
          Printable — use Print button or Ctrl/Cmd+P
        </div>
      </div>
    </div>

    <script>
      const leftBody = document.getElementById("leftCol");
      const rightBody = document.getElementById("rightCol");
      const total = 25;
      const answers = new Array(total).fill(null);

      function createRow(i) {
        const tr = document.createElement("tr");
        const tdNum = document.createElement("td");
        tdNum.className = "qnum";
        tdNum.textContent = i + 1 + ".";
        tr.appendChild(tdNum);

        const tdChoices = document.createElement("td");
        tdChoices.colSpan = 4;
        const choicesWrap = document.createElement("div");
        choicesWrap.className = "choices";

        ["A", "B", "C", "D", "E"].forEach((letter) => {
          const btn = document.createElement("div");
          btn.className = "bubble";
          btn.setAttribute("role", "button");
          btn.setAttribute("tabindex", "0");
          btn.setAttribute("data-q", i);
          btn.setAttribute("data-choice", letter);
          btn.title = letter;
          btn.textContent = letter;
          btn.addEventListener("click", onBubbleClick);
          choicesWrap.appendChild(btn);
        });

        tdChoices.appendChild(choicesWrap);
        tr.appendChild(tdChoices);
        return tr;
      }

      function onBubbleClick(e) {
        const q = Number(this.dataset.q);
        const c = this.dataset.choice;
        if (answers[q] === null) {
          answers[q] = c;
          renderRow(q);
        }
      }

      function renderRow(q) {
        document.querySelectorAll('[data-q="' + q + '"]').forEach((el) => {
          if (answers[q] === el.dataset.choice) el.classList.add("selected");
          else el.classList.remove("selected");
        });
      }

      for (let i = 0; i < total; i++) {
        const row = createRow(i);
        if (i < 13) leftBody.appendChild(row);
        else rightBody.appendChild(row);
      }

      document.getElementById("downloadBtn").addEventListener("click", () => {
        const name = document.getElementById("studentName").value.trim();
        const date = document.getElementById("contestDate").value;
        const rows = [];
        for (let i = 0; i < total; i++) {
          rows.push(i + 1 + ":" + (answers[i] || ""));
        }
        const header = `Name:${name} Date:${date}`;
        const blob = new Blob([header + "\n" + rows.join("\n")], {
          type: "text/plain",
        });
        const url = URL.createObjectURL(blob);
        const a = document.createElement("a");
        a.href = url;
        a.download =
          (name ? name.replace(/\s+/g, "_") : "amc10_answers") + ".txt";
        document.body.appendChild(a);
        a.click();
        a.remove();
        URL.revokeObjectURL(url);
      });

      document
        .getElementById("printBtn")
        .addEventListener("click", () => window.print());
    </script>
  </body>
</html>
